<div class="accordion m-3" id="accordionExample">

  <div class="card mb-3">
    <div class="card-header">
        <div class="row text-center">
          <div class="col-1">
            <strong>Status</strong>
          </div>
          <div class="col">
            <strong>Step</strong>
          </div>
          <div class="col-2">
            <strong>Image</strong>
          </div>
          <div class="col-1 text-right">
            <strong>Image size</strong>
          </div>
          <div class="col-1 text-right">
            <strong>Pull time</strong>
          </div>
          <div class="col-1 text-right">
            <strong>Execution time</strong>
          </div>
          <div class="col-1 text-right">
            <strong>Total time</strong>
          </div>
        </div>
    </div>
</div>

{{#each log.steps as |step index|}}
  <div class="card">
    <div class="card-header" id="heading-{{index}}" data-toggle="collapse" data-target="#collapse-{{index}}" aria-expanded="{{expanded-by-status step.status}}" aria-controls="collapse-{{index}}">
        <div class="row">
          <div class="col-1 text-center">
            <span class="badge {{build-step-class step.status}}">{{step.status}}</span>
          </div>
          <div class="col">
            <h4>
              {{step.step}}
            </h4>
          </div>
          <div class="col-2">
            {{step.image.name}}:{{step.image.tag}} 
          </div>
          <div class="col-1 text-right">
            {{#if (is-step-executed step.status)}}
              {{#if step.image.imageSize}}
              {{pretty-print-bytes step.image.imageSize}}
              {{else}}
              <em class="text-muted">(cached)</em>
              {{/if}}
            {{/if}}
          </div>
          <div class="col-1 text-right">
            {{#if (is-step-executed step.status)}}
              {{#if step.image.imageSize}}
              {{pretty-print-timespan step.image.pullDuration}}
              {{else}}
              <em class="text-muted">(cached)</em>
              {{/if}}
            {{/if}}
          </div>
          <div class="col-1 text-right">
            {{pretty-print-timespan step.duration}}
          </div>
          <div class="col-1 text-right">
            {{pretty-print-timespan step.image.pullDuration step.duration}}
          </div>
        </div>
    </div>

    <div id="collapse-{{index}}" class="collapse {{collapse-by-status step.status}}" aria-labelledby="heading-{{index}}" data-parent="#accordionExample">
      <div class="card-body text-monospace bg-dark text-light">
        {{#each step.logLines as |line|}}
        <div class="row no-gutters">
          <div class="col-1 text-white-50" style="min-width: 300px;">{{line.timestamp}}</div>
          <div class="col">{{line.text}}</div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
{{/each}}


<div class="card mt-3">
  <div class="card-header">
      <div class="row text-center">
        <div class="col">
        </div>
        <div class="col-1 text-right">
          <strong>{{pretty-print-bytes log.totalImageSize}}</strong>
        </div>
        <div class="col-1 text-right">
          <strong>{{pretty-print-timespan log.totalPullDuration}}</strong>
        </div>
        <div class="col-1 text-right">
          <strong>{{pretty-print-timespan log.totalDuration}}</strong>
        </div>
        <div class="col-1 text-right">
          <strong>{{pretty-print-timespan log.totalPullDuration log.totalDuration}}</strong>
        </div>
      </div>
  </div>
</div>

</div>
